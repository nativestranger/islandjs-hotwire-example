<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-indigo-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-12" data-controller="posts-list">
    <div class="mb-8 sm:mb-10">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
        <div>
          <h1 class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
            Posts
          </h1>
          <p class="mt-1 sm:mt-2 text-slate-600 text-sm sm:text-base">Share your thoughts with the community</p>
        </div>
        <%= link_to new_post_path, class: "inline-flex items-center justify-center px-4 sm:px-6 py-2.5 sm:py-3 rounded-xl text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 transition-all duration-200 hover:scale-105 hover:shadow-lg font-medium text-sm sm:text-base" do %>
          <svg class="w-4 sm:w-5 h-4 sm:h-5 mr-1.5 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          New Post
        <% end %>
      </div>
    </div>
    
    <%= turbo_stream_from "posts" %>
    
    <div id="posts" data-posts-list-target="container" class="space-y-6">
      <% @posts.each do |post| %>
        <%= render partial: "post", locals: { post: post } %>
      <% end %>
    </div>
    
    <% if @posts.empty? %>
      <div class="text-center py-20">
        <svg class="mx-auto h-24 w-24 text-slate-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="text-xl font-medium text-slate-600 mb-2">No posts yet</h3>
        <p class="text-slate-500">Be the first to share something!</p>
      </div>
    <% end %>
  </div>
</div>